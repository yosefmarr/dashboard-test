<main class='login-main-view bg-body-tertiary'>
  <div class='language-switcher dropdown position-absolute top-1 end-1'>
    <button
      class='btn dropdown-toggle btn-outline-dark'
      type='button'
      data-bs-toggle='dropdown'
      aria-expanded='false'
    >
      \{{lang}}
    </button>
    <ul class='dropdown-menu dropdown-menu-dark'>
      <li><a
          class='dropdown-item \{{#ifEquals lang "es"}}active\{{/ifEquals}}'
          href='#'
          data-lang='es'
        >Espa√±ol (es)</a></li>
      <li><a
          class='dropdown-item \{{#ifEquals lang "en"}}active\{{/ifEquals}}'
          href='#'
          data-lang='en'
        >English (en)</a></li>
    </ul>
  </div>
  <div class='card p-md-5 p-3' id='login-card'>
    <form id='login-form' class='login-form needs-validation' novalidate>
      <div class='input-group has-validation mb-3'>
        <div class='form-floating'>
          <input
            type='email'
            class='form-control'
            id='email'
            name='email'
            placeholder='name@example.com'
            required
          />
          <label for='email' data-i18n='login.email'>\{{email}}</label>
          <div class='invalid-feedback' data-i18n='login.emailError'>
            \{{emailError}}
          </div>
        </div>
      </div>
      <div class='input-group has-validation mb-3'>
        <div class='form-floating'>
          <input
            type='password'
            class='form-control'
            id='password'
            name='password'
            placeholder='Password'
            required
          />
          <label for='password' data-i18n='login.password'>\{{password}}</label>
          <div class='invalid-feedback' data-i18n='login.passwordError'>
            \{{passwordError}}
          </div>
        </div>
      </div>
      <button
        id='btn-submit'
        class='btn btn-primary w-100'
        type='submit'
        data-i18n='login.signIn'
      >\{{signIn}}</button>
    </form>
  </div>
</main>